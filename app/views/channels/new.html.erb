
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">新規チャンネル作成ページ</h2>
      <%= form_with(url: create_channel_path, model: @channel, local: true, method: :post, html: { class: 'post-form' }) do |f| %>

        <% if @channel.errors.any? %>
          <ul>
            <% @channel.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %> </ul>
        <% end %>

        <div class="form-group">
          <%= f.label "チャンネル名", class: 'form-label' %>
          <%= f.text_field :title, value: @channel.title, class: 'form-control' %>
        </div>

        <div class="button-group">
          <%= f.submit '作成する', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>