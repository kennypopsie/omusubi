<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">チャンネル編集</h2>
      <%= form_with(url: update_channel_path, model: @channel, local: true, method: :post, html: { class: 'post-form' }) do |f| %>

        <% if @channel.errors.any? %>
          <ul>
            <% @channel.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %> </ul>
        <% end %>

        <div class="form-group">
          <%= f.label "タイトル", class: 'form-label' %>
          <%= f.text_field :title, value: @channel.title, class: 'form-control' %>
        </div>

        <div class="button-group">
          <!-- 以下の行を追加する -->
          <%= link_to '削除', destroy_channel_path(@channel), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
          <%= f.submit '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>